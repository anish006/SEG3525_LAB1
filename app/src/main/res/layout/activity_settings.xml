<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            app:srcCompat="@drawable/image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginTop="200px"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="146dp">

            <TextView
                android:id="@+id/prbpardef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90px"
                android:layout_weight="1"
                android:text="Pourboire(%) / dÃ©faut : "
                android:textSize="22sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/prcprdef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100px"
                android:layout_weight="1"
                android:ems="5"
                android:inputType="numberDecimal"
                android:paddingBottom="25px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55px"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/dollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70px"
                android:layout_weight="1"
                android:text="Devise(Dollar)"
                android:textSize="22sp"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70px"
                android:layout_marginTop="70px"
                android:layout_weight="1"
                android:text="Devise(euro)"
                android:textSize="22sp"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/livre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70px"
                android:layout_marginTop="70px"
                android:layout_weight="1"
                android:text="Devise(livre)"
                android:textSize="22sp"
                android:textStyle="italic" />

        </LinearLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="450px"
            android:layout_marginRight="450px"
            android:layout_marginTop="200px"
            android:text="Submit"
            android:textSize="22sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>